<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProjectDraft.MainPage">

    <Grid RowDefinitions="*, Auto">

        <ScrollView Grid.Row="0">
            <VerticalStackLayout
                VerticalOptions="Start"
                Padding="30,0"
                Spacing="25">

                <Image
                    HorizontalOptions="Center"
                    Source="logolabel.png"
                    WidthRequest="290"  
                    Margin="0,30,0,-10"               
                    Aspect="AspectFit"
                    SemanticProperties.Description="Main page image" />

                <Image
                    HorizontalOptions="Center"
                    Source="headstarter_picture.png"
                    HeightRequest="240"               
                    Aspect="AspectFit"
                    SemanticProperties.Description="Main page image" />

                <Frame Margin="0,20,0,0" CornerRadius="50" BorderColor="{StaticResource LogoYellow}">
                    <SearchBar x:Name="SearchBar" />
                </Frame>
                
                <Label                   
                    Text="Намери своя талант"
                    TextColor="Black"
                    FontSize="30"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"/>
                
                

            </VerticalStackLayout>
        </ScrollView>


        <FlexLayout Grid.Row="1"
                    Direction="Column"
                    AlignItems="Center"
                    JustifyContent="Center"
                    Padding="10"
                    BackgroundColor="{StaticResource LogoYellow}">

            <Label Text=" aaaaaaaaaaaaaa"
                   TextColor="Black"
                   FontSize="16"
                   Background="{StaticResource LogoGreen}"
                   Padding="100,5"/>    

            <Label Text="Headstarter 2025"
                   TextColor="Black"
                   FontSize="16"
                   Background="{StaticResource LogoGreen}"
                   Padding="100,5"/>
        </FlexLayout>

    </Grid>

</ContentPage>
